<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>SegFox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: "all" %>
    <%= javascript_importmap_tags %>
  </head>

<body class="relative min-h-screen text-white font-sans">
  <!-- Fundo fixo com overlay escuro -->
  <div
    style="
      position: fixed;
      top: 0; left: 0; width: 100%; height: 100%;
      background: url('<%= asset_path('canine.jpg') %>') no-repeat center center fixed;
      background-size: cover;
      z-index: -10;
    "
    aria-hidden="true"
  ></div>

  <!-- Overlay escuro -->
  <div
    style="
      position: fixed;
      top: 0; left: 0; width: 100%; height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: -5;"
  ></div>

  <!-- ConteÃºdo principal -->
  <div class="relative z-10 min-h-screen flex flex-col">
    <div class="w-full max-w-6xl mx-auto px-6 py-6">
      <%= render "shared/navbar" %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
