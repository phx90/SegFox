<div class="flex items-center justify-center min-h-screen px-4 py-8">
  <div class="bg-white p-6 rounded-xl shadow-lg w-full max-w-xs space-y-6">

    <!-- Logo -->
    <div class="flex justify-center">
      <%= image_tag "banner.png", alt: "SegFox Logo", class: "h-10 object-contain" %>
    </div>

    <!-- Título -->
    <h2 class="text-center text-xl font-semibold text-gray-900">Área Administrativa</h2>

    <!-- Flash de erro -->
    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-700 text-center text-xs p-2 rounded-md">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Formulário -->
    <%= form_with url: login_path, method: :post, local: true, class: "space-y-4" do |form| %>
      <div class="space-y-2">
        <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-800" %>
        <%= form.email_field :email, required: true, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm text-gray-900 focus:ring-2 focus:ring-green-400 focus:border-green-400" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-800" %>
        <%= form.password_field :password, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm text-gray-900 focus:ring-2 focus:ring-green-400 focus:border-green-400" %>
      </div>

      <div>
        <%= form.submit "Entrar", class: "w-full py-2 bg-green-600 hover:bg-green-700 text-white font-bold rounded-md text-sm transition duration-150" %>
      </div>
    <% end %>

  </div>
</div>
